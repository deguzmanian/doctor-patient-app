<div class="container">
  <div class="panel panel-default">
    <div class="panel-heading"><h3>Diagnosis Categories<a href="{{ path('add_diagnosis_category') }}" class="btn btn-info pull-right btn-sm">Add New Category</a></h3></div>
<div class="panel-body">
      <div class="table-responsive">
        <table class="table">
      <thead>
        <tr>
          <th>NAME</th>
          <th>ACTIONS</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          {% for category in diagnosiscategories %}
            <td>{{ category.diagnosisName }}</td>
            <td><a href="{{ path('user_edit', { 'id': category.id }) }}" class="btn btn-primary btn-xs">EDIT</a>
            <a href="{{ path('user_delete', { 'id': category.id }) }}" class="btn btn-danger btn-xs">DELETE</a></td>
        </tr>
      {% endfor %}
      </tbody>
    </table>

      </div>
		</div>
	</div>	
</div>
