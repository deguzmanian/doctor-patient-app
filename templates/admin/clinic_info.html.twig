        </div><!--/.nav-collapse -->
      </div>
    </nav>
<div class="container">
  <div class="panel panel-default">
    <div class="panel-heading"><h3>Clinic Details <a href="{{ path('clinic_list') }}" class="pull-right ">Back to list</a></h3></div>
<div class="panel-body">
    <div class="table-responsive">
      <table class="table">
          
        <tr>
          <th style="text-align:center;">Clinic Name: <br> {{ clinic_info.clinicName }}</th>
          <th style="text-align:center;">Clinic Email: <br> {{ clinic_info.email }}</th>
        </tr>

        <tr>
          <th colspan="2" style="text-align:center;">Clinic Schedule</th>
        </tr>

        <tr>
          <th style="text-align:center;">Opening Time: <br>{{ clinic_info.schedStart| date('h:i') }} am</th>
          <th style="text-align:center;">Closing Time: <br>{{ clinic_info.schedEnd| date('h:i') }} pm</th>
        </tr>

        <tr>
          <td style="text-align:center;"><a href="" title="Click here to add doctor">Add Doctor</a></td>
          <td style="text-align:center;"><a href="" title="Click here to view doctors">View Doctor List</a></td>
        </tr>
      </table>
</div>
</div>
</div>
</div>

