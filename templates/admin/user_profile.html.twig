{% extends 'base.html.twig' %}

{% block title %}User Profile{% endblock %}

{% block body %}
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <a class="navbar-brand" href="#">Doctor Patient App</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li><a href="{{ path('admin') }}">Home</a></li>
            <li><a href="{{ path('user_info_index') }}">Users</a></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Manage Clinic <span class="caret"></span></a>
              <ul class="dropdown-menu" role="menu">
                <li><a href="{{ path('add_clinic') }}">Clinic Setup</a></li>
                <li><a href="{{ path('doctor_list') }}">Doctor List</a></li>
                <li><a href="{{ path('patient_list') }}">Patient List</a></li>
                <li><a href="{{ path('diagnosis_categories') }}">Diagnosis List</a></li>
                <li class="divider"></li>
                <li class="dropdown-header">Manage Doctors/Patients/Diagnosis</li>
                <li><a href="{{ path('doctor') }}">Add Doctor</a></li>
                <li><a href="{{ path('patient-add') }}">Add Patient</a></li>
                <li><a href="{{ path('add_diagnosis_category') }}">Add Diagnosis Category</a></li>
              </ul>
            </li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <li><a href="{{ path('logout') }}">Logout</a></li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>
<div class="container">
      <div class="panel panel-default">
    <div class="panel-heading"><h3 style="text-align:center;">PROFILE</h3></div>
    <div class="panel-body">
      <div class="table-responsive">
      <table class="table">
      {% for doctor in doctor %}
          
          <tr>
          <th style="text-align:center;"><h4>USER DETAILS</h4></th>
          <th style="text-align:center;"><h4>ACCREDITATION DETAILS</h4></th>
          </tr>

          <tr>
          <td style="text-align:center;">Name: {{doctor.userInfo.fname}} {{doctor.userInfo.mname}} {{doctor.userInfo.lname}}, {{doctor.userInfo.Suffix}} </td>
            <td style="text-align:center;">Accrediatation Code: {{ doctor.accreditationinfo.accreditationCode }}</td>
          </tr>

          <tr>
          <td style="text-align:center;">Birtdate: {{doctor.userInfo.birthdate| date('m-d-y') }} </td>
            <td style="text-align:center;">Accrediatation Start Date: {{ doctor.accreditationinfo.accreditationDate| date() }}</td> 
          </tr>
          <td style="text-align:center;">Age: {{ date('now').diff((date(doctor.userInfo.birthdate))).format('%y years old') }} </td>
            <td style="text-align:center;">Accrediatation Expiry Date: {{ doctor.accreditationinfo.accreditationExpdate| date() }}</td> 
          </tr>
          
          <tr>
            <td style="text-align:center;">Address: {{ doctor.userInfo.address }}</td>
            <td></td>
          </tr>

          <tr>
            <td style="text-align:center;">Civil Status: {{ doctor.userInfo.civilstatus }}</td>
            <td></td>
          </tr>

          {% endfor %}
    
          </table>
        </div>
    </div>
  </div>
</div>

{% endblock %}