{% extends 'base.html.twig' %}

{% block title %}View history{% endblock %}

{% block body %}
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <a class="navbar-brand" href="#">Doctor Patient App</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          
          <ul class="nav navbar-nav navbar-right">
            <li><a href="#">Logout</a></li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>

<div class="container">
    <div class="panel panel-default">
    <div class="panel-heading"><h3>Record Details<a href="{{ path('home') }}" class="btn btn-primary pull-right btn-sm">Home</a></h3></div>
    <div class="panel-body">
<div class="table-responsive">
    <table class="table table-bordered">
        <tbody>
            <tr>
                <th style="text-align:center;">Date of Checkup: record.check_up </th>
                <th style="text-align:center;">Doctor-in-Charge: record.doc_in_charge </th>
            </tr>
            <tr>
                <td style="text-align:center;" colspan="2">Check up reason: record.reason</td>
            </tr>
            <tr>
                <td style="text-align:center;" colspan="2">Diagnosis Category: record.category</td>
            </tr>
            <tr>
                <td style="text-align:center;" colspan="2">Diagnosis: record.diagnosis</td>
            </tr>
            <tr>
                <td style="text-align:center;" colspan="2">Payment: record.payment</td>
            </tr>
        </tbody>
    </table>
    </div>
</div>
</div>
</div>
{% endblock %}
